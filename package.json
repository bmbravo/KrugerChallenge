{
  "name": "vaccineapp",
  "version": "1.0.0",
  "description": "VaccineApp BackEnd for the kruger challenge",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bmbravo/KrugerChallenge.git"
  },
  "keywords": [
    "vaccines",
    "employees",
    "kruger"
  ],
  "author": "Bill Bravo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bmbravo/KrugerChallenge/issues"
  },
  "homepage": "https://github.com/bmbravo/KrugerChallenge#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "express-validator": "^6.14.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.6.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.2.10",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "nodemon": "^2.0.19"
  }
}
